{# purpose of this template: messages atom feed #}
<?xml version="1.0" encoding="{% set charset = pageGetVar('meta.charset') %}{% if charset == 'ISO-8859-15' %}ISO-8859-1{% else %}{{ charset }}{% endif %}" ?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title type="text">{{ __('Latest messages') }}</title>
    <subtitle type="text">{{ __('A direct feed showing the list of messages') }} - {{ getModVar('ZConfig', 'slogan') }}</subtitle>
    <author>
        <name>{{ getModVar('ZConfig', 'sitename') }}</name>
    </author>
{% set amountOfItems = items|length %}
{% if amountOfItems > 0 %}
{% set uniqueID %}tag:{{ app.request.getSchemeAndHttpHost()|replace({'http://': '', '/': ''}) }},{{ items.first.createdDate|date('Y-m-d') }}:{{ path('munewsmodule_message_' ~ routeArea ~ 'display', {'id': items.first.getId(), 'slug': items.first.slug}) }}{% endset %}
    <id>{{ uniqueID }}</id>
    <updated>{{ items[0].updatedDate|date('Y-m-dTH:M:SZ') }}</updated>
{% endif %}
    <link rel="alternate" type="text/html" hreflang="{{ app.request.locale }}" href="{{ url('munewsmodule_message_' ~ routeArea ~ 'index') }}" />
    <link rel="self" type="application/atom+xml" href="{{ app.request.getSchemeAndHttpHost() ~ app.request.getBasePath() }}" />
    <rights>Copyright (c) {{ 'now'|date('Y') }}, {{ app.request.getSchemeAndHttpHost()|e }}</rights>
{% for message in items %}
    {{ block('entry') }}
{% endfor %}
</feed>
{% block entry %}
    <entry>
        {{ block('entry_content') }}
    </entry>
{% endblock %}
{% block entry_content %}
    <title type="html">{{ message|munewsmodule_formattedTitle|notifyFilters('munewsmodule.filterhook.messages')|safeHtml }}</title>
    <link rel="alternate" type="text/html" href="{{ url('munewsmodule_message_' ~ routeArea ~ 'display', {'id': message.getId(), 'slug': message.slug}) }}" />
    {% set uniqueID %}tag:{{ app.request.getSchemeAndHttpHost()|replace({ 'http://': '', '/': '' }) }},{{ message.createdDate|date('Y-m-d') }}:{{ path('munewsmodule_message_' ~ routeArea ~ 'display', {'id': message.getId(), 'slug': message.slug}) }}{% endset %}
    <id>{{ uniqueID }}</id>
    {% if message.updatedDate|default %}
        <updated>{{ message.updatedDate|date('Y-m-dTH:M:SZ') }}</updated>
    {% endif %}
    {% if message.createdDate|default %}
        <published>{{ message.createdDate|date('Y-m-dTH:M:SZ') }}</published>
    {% endif %}
    {% if message.createdBy|default and message.createdBy.getUid() > 0 %}
        {% set creatorAttributes = message.createdBy.getAttributes() %}
        <author>
           <name>{{ creatorAttributes.get('realname')|default(creatorAttributes.get('name'))|default(message.createdBy.getUname()) }}</name>
           <uri>{{ creatorAttributes.get('_UYOURHOMEPAGE')|default('-') }}</uri>
           <email>{{ message.createdBy.getEmail() }}</email>
        </author>
    {% endif %}
    <summary type="html">
        <![CDATA[
        {{ message.startText|truncate(150, true, '&hellip;')|default('-') }}
        ]]>
    </summary>
    <content type="html">
        <![CDATA[
        {{ message.mainText|replace({ '<br>': '<br />' }) }}
        ]]>
    </content>
{% endblock %}
