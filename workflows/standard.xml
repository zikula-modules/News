<?xml version="1.0" encoding="UTF-8"?>
<workflow>
    <title>Standard workflow (single approval)</title>
    <description>This is a two staged workflow with stages for untrusted submissions and finally approved publications. It does not allow corrections of non-editors to published pages.</description>
    <!-- define the available states -->
    <states>
        <state id="initial">
            <title>Initial</title>
            <description>Pseudo-state for content which is just created and not persisted yet.</description>
        </state>
        <state id="deferred">
            <title>Deferred</title>
            <description>Content has not been submitted yet or has been waiting, but was rejected.</description>
        </state>
        <state id="waiting">
            <title>Waiting</title>
            <description>Content has been submitted and waits for approval.</description>
        </state>
        <state id="approved">
            <title>Approved</title>
            <description>Content has been approved and is available online.</description>
        </state>
        <state id="suspended">
            <title>Suspended</title>
            <description>Content has been approved, but is temporarily offline.</description>
        </state>
        <state id="archived">
            <title>Archived</title>
            <description>Content has reached the end and became archived.</description>
        </state>
        <state id="deleted">
            <title>Deleted</title>
            <description>Pseudo-state for content which has been deleted from the database.</description>
        </state>
    </states>
    <!-- define actions and assign their availability to certain states -->
    <!-- available permissions: overview, read, comment, moderate, edit, add, delete, admin -->
    <actions>
        <!-- From state: Initial -->
        <action id="defer">
            <title>Defer</title>
            <description>Defer content for later submission.</description>
            <permission>comment</permission>
            <nextState>deferred</nextState>
        
            <operation>update</operation>
        </action>
        
        
        <action id="submit">
            <title>Submit</title>
            <description>Submit content for acceptance by a moderator.</description>
            <permission>comment</permission>
            <nextState>waiting</nextState>
        
            <operation>update</operation>
        </action>
        
        
        <action id="approve">
            <title>Submit and Approve</title>
            <description>Submit content and approve immediately.</description>
            <permission>add</permission>
            <nextState>approved</nextState>
        
            <operation>update</operation>
        </action>
        
        <!-- From state: Deferred -->
        
        <action id="submit">
            <title>Submit</title>
            <description>Submit content for acceptance by a moderator.</description>
            <permission>comment</permission>
            <state>deferred</state>
            <nextState>waiting</nextState>
        
            <operation>update</operation>
        </action>
        
        <action id="update">
            <title>Update</title>
            <description>Update content.</description>
            <permission>edit</permission>
            <state>deferred</state>
        
            <operation>update</operation>
        </action>
        
        <!-- From state: Waiting -->
        <action id="update">
            <title>Update</title>
            <description>Update content.</description>
            <permission>edit</permission>
            <state>waiting</state>
        
            <operation>update</operation>
        </action>
        
        
        <action id="reject">
            <title>Reject</title>
            <description>Reject content and require improvements.</description>
            <permission>edit</permission>
            <state>waiting</state>
            <nextState>deferred</nextState>
        
            <operation>update</operation>
        </action>
        
        
        <action id="approve">
            <title>Approve</title>
            <description>Update content and approve for immediate publishing.</description>
            <permission>add</permission>
            <state>waiting</state>
            <nextState>approved</nextState>
        
            <operation>update</operation>
        </action>
        
        <!-- From state: Approved -->
        <action id="update">
            <title>Update</title>
            <description>Update content.</description>
            <permission>edit</permission>
            <state>approved</state>
        
            <operation>update</operation>
        </action>
        
        <action id="unpublish">
            <title>Unpublish</title>
            <description>Hide content temporarily.</description>
            <permission>edit</permission>
            <state>approved</state>
            <nextState>suspended</nextState>
        
            <operation>update</operation>
        </action>
        
        <action id="archive">
            <title>Archive</title>
            <description>Move content into the archive.</description>
            <permission>edit</permission>
            <state>approved</state>
            <nextState>archived</nextState>
        
            <operation>update</operation>
        </action>
        
        <!-- From state: Suspended -->
        <action id="update">
            <title>Update</title>
            <description>Update content.</description>
            <permission>edit</permission>
            <state>suspended</state>
        
            <operation>update</operation>
        </action>
        
        <action id="publish">
            <title>Publish</title>
            <description>Make content available again.</description>
            <permission>edit</permission>
            <state>suspended</state>
            <nextState>approved</nextState>
        
            <operation>update</operation>
        </action>
        
        <action id="archive">
            <title>Archive</title>
            <description>Move content into the archive.</description>
            <permission>edit</permission>
            <state>suspended</state>
            <nextState>archived</nextState>
        
            <operation>update</operation>
        </action>
        
        <!-- From state: Archived -->
        <action id="update">
            <title>Update</title>
            <description>Update content.</description>
            <permission>edit</permission>
            <state>archived</state>
        
            <operation>update</operation>
        </action>
        
        <!-- From state: Deleted -->
    
        <!-- Actions for destroying objects -->
        <action id="delete">
            <title>Delete</title>
            <description>Delete content permanently.</description>
            <permission>delete</permission>
            <state>deferred</state>
        
            <operation>delete</operation>
        </action>
        
        <action id="delete">
            <title>Delete</title>
            <description>Delete content permanently.</description>
            <permission>delete</permission>
            <state>waiting</state>
        
            <operation>delete</operation>
        </action>
        
        <action id="delete">
            <title>Delete</title>
            <description>Delete content permanently.</description>
            <permission>delete</permission>
            <state>approved</state>
        
            <operation>delete</operation>
        </action>
        
        <action id="delete">
            <title>Delete</title>
            <description>Delete content permanently.</description>
            <permission>delete</permission>
            <state>suspended</state>
        
            <operation>delete</operation>
        </action>
        
        <action id="delete">
            <title>Delete</title>
            <description>Delete content permanently.</description>
            <permission>delete</permission>
            <state>archived</state>
        
            <operation>delete</operation>
        </action>
        
    </actions>
</workflow>
